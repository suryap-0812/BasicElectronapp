{
  "name": "basic_electron",
  "version": "1.0.3",
  "description": "Basic Electron App with Auto-Updater",
  "main": "main.js",
  "homepage": "https://github.com/suryap-0812/BasicElectronapp",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["electron", "auto-updater"],
  "author": "Your Name",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.bill.myapp",
    "productName": "BasicElectronApp",
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "suryap-0812",
        "repo": "BasicElectronapp",
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}